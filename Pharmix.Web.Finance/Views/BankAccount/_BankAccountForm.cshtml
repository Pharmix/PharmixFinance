@model Pharmix.Data.Entities.ViewModels.Customer.BankAccountViewModel
@{
    Layout = null;
}

<div class="col-sm-12">
    <form id="formBank">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CustomerId" />
        <div class="form-group col-sm-6">
            <label asp-for="AccountNumber" class="control-label">Account Number</label>
            <input asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="BankName" class="control-label">Bank Name</label>
            <input asp-for="BankName" class="form-control" />
            <span asp-validation-for="BankName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="IFSCCode" class="control-label">IFSC Code</label>
            <input asp-for="IFSCCode" class="form-control ui-datepicker-calendar" />
            <span asp-validation-for="IFSCCode" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="BranchName" class="control-label">Branch Name</label>
            <input asp-for="BranchName" class="form-control ui-datepicker-calendar" />
            <span asp-validation-for="BranchName" class="text-danger"></span>
        </div>
        <div class="clearfix"></div>
        <hr />
        <div class="form-group text-center">
            <button type="button" id="btnSaveBankAccount" class="btn btn-success">Save</button>
            <button type="button" id="btnCancelLoan" data-dismiss="modal" aria-hidden="true" class="btn btn-danger">Cancel</button>
        </div>
    </form>
</div>