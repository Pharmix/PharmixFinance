        //$("#pharmix-login-form #Password").val("Admin@123");

        if ('@message') {
            $('#loginMessage').fadeIn('slow');
        }

        $("#SelectedTrustId").on("change",
            function () {
                if ($(this).val().length > 0) {
                    window.location.href = "@Url.Action("Index", "Home")" + "?trustid=" + $(this).val();
                }
            });
    });
</script>
