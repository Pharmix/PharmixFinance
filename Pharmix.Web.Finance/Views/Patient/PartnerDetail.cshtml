@model Pharmix.Web.Models.PatientViewModel.PartnerDetailViewModel
@using Pharmix.Data.Enums
@{
    Layout = "_LayoutPregnancy";
    ViewData["PatientId"] = Model.PatientId;
    ViewBag.Title = "Patient Info";
}

@if (Model.IsAdmin)
{
    <form id="formUser" asp-action="PartnerDetail" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PatientId" />
        <input type="hidden" asp-for="PregnancyId" />
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group text-center">
                    <button type="submit" id="btnSaveUser" class="btn btn-sm btn-success">Save All Changes</button>
                    <button type="reset" id="btnCancelUser" class="btn btn-sm btn-danger">Cancel</button>
                </div>
                <hr />
            </div>
            <div class="col-sm-12">
                <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5 form-horizontal">
                    <div class="form-group">
                        <label asp-for="Surname" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Surname" class="form-control" />
                        </div>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                    <div class="form-group">
                        <label asp-for="Address" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <textarea asp-for="Address" class="form-control"></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5 form-horizontal">
                    <div class="form-group">
                        <label asp-for="Postcode" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Postcode" class="form-control" />
                        </div>
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                    <div class="form-group">
                        <label asp-for="DOB" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="DOB" class="form-control" />
                        </div>
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5 form-horizontal">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                    <div class="form-group">
                        <label asp-for="Employed" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8 control-label" style="text-align: center">
                            <input asp-for="Employed" type="radio" value="true" /> Employed
                            <input asp-for="Employed" type="radio" value="false" /> U/E
                        </div>
                        <span asp-validation-for="Employed" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5 form-horizontal">
                    <div class="form-group">
                        <label asp-for="Occupation" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Occupation" class="form-control" />
                        </div>
                        <span asp-validation-for="Occupation" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                    <div class="form-group">
                        <label asp-for="UKCitizenshipStatus" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="UKCitizenshipStatus" class="form-control"/> 
                        </div>
                        <span asp-validation-for="UKCitizenshipStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-5 form-horizontal">
                    <div class="form-group">
                        <label asp-for="YearOfEntry" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="YearOfEntry" class="form-control" />
                        </div>
                        <span asp-validation-for="YearOfEntry" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

    </form>
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="FirstName" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.FirstName) ? "-" : Model.FirstName)
                    </div>
                </div>
            </div>
            <div class="col-sm-5 form-horizontal">
                <div class="form-group">
                    <label asp-for="Surname" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.Surname) ? "-" : Model.Surname)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="Address" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)
                    </div>
                </div>
            </div>
            <div class="col-sm-5 form-horizontal">
                <div class="form-group">
                    <label asp-for="Postcode" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.Postcode) ? "-" : Model.Postcode)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="DOB" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(Model.DOB == null ? "-" : ((DateTime)Model.DOB).ToString("dd/MM/yyyy"))
                    </div>
                </div>
            </div>
            <div class="col-sm-5 form-horizontal">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="Employed" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8 control-label" style="text-align: center">
                        @(Model.Employed ? "Employed" : "U/E")
                    </div>
                </div>
            </div>
            <div class="col-sm-5 form-horizontal">
                <div class="form-group">
                    <label asp-for="Occupation" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        @(string.IsNullOrEmpty(Model.Occupation) ? "-" : Model.Occupation)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-5 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="UKCitizenshipStatus" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="UKCitizenshipStatus" class="form-control" />
                    </div>
                    <span asp-validation-for="UKCitizenshipStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-5 form-horizontal">
                <div class="form-group">
                    <label asp-for="YearOfEntry" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="YearOfEntry" class="form-control" />
                    </div>
                    <span asp-validation-for="YearOfEntry" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}