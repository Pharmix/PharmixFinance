@model Pharmix.Web.Models.PatientViewModel.YourDetailViewModel
@using Pharmix.Data.Enums
@{
    Layout = "_LayoutPregnancy";
    ViewData["PatientId"] = Model.PatientId;
    ViewBag.Title = "Patient Info";
}

@if (Model.IsAdmin)
{
    <form id="formUser" asp-action="YourDetail" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PatientId" />
        <input type="hidden" asp-for="PregnancyId" />
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group text-center">
                    <button type="submit" id="btnSaveUser" class="btn btn-sm btn-success">Save All Changes</button>
                    <button type="reset" id="btnCancelUser" class="btn btn-sm btn-danger">Cancel</button>
                </div>
                <hr />
            </div>
            <div class="col-sm-8 col-sm-offset-2 form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Single" /> @MarriageStatusEnum.Single.ToString()
                    </div>
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Married" /> @MarriageStatusEnum.Married.ToString()
                    </div>
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Partner" /> @MarriageStatusEnum.Partner.ToString()
                    </div>
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Separated" /> @MarriageStatusEnum.Separated.ToString()
                    </div>
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Divorce" /> @MarriageStatusEnum.Divorce.ToString()
                    </div>
                    <div class="col-sm-2">
                        <input asp-for="MarriageStatus" type="radio" value="@MarriageStatusEnum.Widowed" /> @MarriageStatusEnum.Widowed.ToString()
                    </div>
                    <span asp-validation-for="MarriageStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 form-horizontal">
                <div class="form-group">
                    <label asp-for="FamilyName" class="col-sm-2 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="FamilyName" class="form-control" />
                    </div>
                    <span asp-validation-for="FamilyName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 form-horizontal">
                <div class="form-group">
                    <label asp-for="CountryOfBirth" class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="CountryOfBirth" class="form-control" />
                    </div>
                    <span asp-validation-for="CountryOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Faith" class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="Faith" class="form-control" />
                    </div>
                    <span asp-validation-for="Faith" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 form-horizontal">
                <div class="form-group">
                    <label asp-for="YearOfEntry" class="col-sm-4 control-label" style="text-align:left;"></label>
                    <div class="col-sm-6">
                        <input asp-for="YearOfEntry" class="form-control" />
                    </div>
                    <span asp-validation-for="YearOfEntry" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CitizenshipStatus" class="col-sm-4 control-label" style="text-align:left;"></label>
                    <div class="col-sm-6">
                        <input asp-for="CitizenshipStatus" class="form-control" />
                    </div>
                    <span asp-validation-for="CitizenshipStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 form-horizontal">
                <div class="form-group">
                    <label asp-for="Disability" class="col-sm-2 control-label"></label>
                    <div class="col-sm-3 control-label" style="text-align:center;">
                        <input asp-for="Disability" type="radio" value="true" /> Yes
                        <input asp-for="Disability" type="radio" value="false" /> No
                    </div>
                    <label asp-for="Details" class="col-sm-2 col-sm-offset-1 control-label" style="text-align:left;"></label>
                    <div class="col-sm-3">
                        <input asp-for="Details" class="form-control" />
                    </div>
                    <span asp-validation-for="Details" class="text-danger"></span>
                    <span asp-validation-for="CountryOfBirth" class="text-danger"></span>
                </div>
            </div>

        </div>

    </form>
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-10 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="MarriageStatus" class="col-sm-2 control-label" style="text-align: left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(Model.MarriageStatus == null ? "-" : Model.MarriageStatus.Value.ToString())
                    </div>
                    <label asp-for="FamilyName" class="col-sm-2 control-label" style="text-align:left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(string.IsNullOrEmpty(Model.FamilyName) ? "-" : Model.FamilyName)
                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="CountryOfBirth" class="col-sm-2 control-label" style="text-align: left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(string.IsNullOrEmpty(Model.CountryOfBirth) ? "-" : Model.CountryOfBirth)
                    </div>
                    <label asp-for="YearOfEntry" class="col-sm-2 control-label" style="text-align:left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(Model.YearOfEntry == null ? "-" : Model.YearOfEntry.ToString())
                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="Faith" class="col-sm-2 control-label" style="text-align: left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(string.IsNullOrEmpty(Model.Faith) ? "-" : Model.Faith)
                    </div>
                    <label asp-for="CitizenshipStatus" class="col-sm-2 control-label" style="text-align:left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(string.IsNullOrEmpty(Model.CitizenshipStatus) ? "-" : Model.CitizenshipStatus)
                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-1 form-horizontal">
                <div class="form-group">
                    <label asp-for="Disability" class="col-sm-2 control-label" style="text-align: left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(Model.Disability ? "Yes" : "No")
                    </div>
                    <label asp-for="Details" class="col-sm-2 control-label" style="text-align:left"></label>
                    <div class="col-sm-4 control-label" style="text-align: left">
                        @(string.IsNullOrEmpty(Model.Details) ? "-" : Model.Details)
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}